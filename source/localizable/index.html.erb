---
title_translation_key: headline
---

<header class="header home-background" id="home">
  <section class="container">
    <h1 class="page-title">
      <img src="/images/physioblu.svg" alt="Physioblu"/>
    </h1>
    <p><%= t "headline" %></p>
  </section>
</header>

<div class="container">
  <h2 class="title"><%= t "team" %></h2>
  <hr>
  <div class="row team">
    <% data.members.each_value do |member| -%>
    <div class="column">
      <a href="<%= "/#{I18n.locale}/team/#{member.first_name.downcase}/" %>" title="<%= "#{member.first_name} #{member.last_name}" %>">
        <img src="/images/<%= member.first_name.downcase %>_200.jpg" alt="<%= member.first_name %>"/>
        <h3><%= "#{member.first_name} #{member.last_name}" %></h3>
      </a>
    </div>
    <% end -%>
  </div>
</div>
<section class="container" id="contact">
  <h2><%= t "contact" %></h2>
  <hr>
  <div class="row team">
    <% data.members.each_value do |member| -%>
    <div class="column">
      <h3><%= "#{member['first_name']} #{member['last_name']}" %></h3>
      <p><%= member['title'][lang] %></p>
      <ul>
        <li>
          <a href="mailto:<%= member['email'] %>" title="Email">
            <i class="gg-mail"></i> <%= member['email'] %>
          </a>
        </li>
        <li>
          <a href="tel:<%= member['phone'].gsub(' ', '-') %>"  title="<%= t("phone") %>">
            <i class="gg-phone"></i> <%= member['phone'] %>
          </a>
        </li>
      </ul>
    </div>
    <% end -%>
  </div>
  <h3 class="title"><%= t "location" %></h3>
  <div id="mapid" class="column"></div>
  <div class="row">
    <div class="column">
      <b>PhysioBlu</b><br />
      <%= t "address.line_1" %><br />
      <%= t "address.line_2" %>
    </div>
    <div class="column">
      <a class="button button-outline" href="https://goo.gl/maps/tZUJPu1WdB5gE8qG6" title="<%= t "location" %>" rel="noreferrer" target="_blank">
        <%= t "show_on_gmaps" %>
      </a>
    </div>
  </div>
</section>
<% content_for :scripts do %>
  <%= partial "partials/map" %>
<% end %>
